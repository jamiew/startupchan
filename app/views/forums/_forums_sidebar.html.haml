- content_for :actions do
  = link_to 'Refresh', "javascript:location.reload(true);", :class => 'button refresh'
  = link_to 'New Post', new_forum_thread_path, :class => 'button new'

- content_for :sidebar do
  / %h3 All Entries
  = link_to 'Create Entry', new_entry_path, :class => 'button new yellow'

  - if @recent_entries.blank?
    %p.empty== No entries yet... why don't you #{link_to('start one', new_entry_path)}
  %ul.all_entries
    - @recent_entries.each do |entry|
      %li= link_to entry.name, entry_path(entry)