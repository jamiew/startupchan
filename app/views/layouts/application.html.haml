!!!
%html
  %head
    %title Budboard
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #header
      #logo
        %h1= link_to 'Budboard', root_path
        %h2.byline Cannabis/weed community
      #navigation
        %ul
          - if !current_user.nil? # logged_in?
            %email= current_user.email
            == &nbsp;
            %li.settings= link_to 'settings', edit_user_password_path
            == /
            %li.logout= link_to 'logout', destroy_user_session_path
          - else
            %li.login= link_to 'login', new_user_session_path
            == /
            %li.register= link_to 'register', new_user_registration_path
      %br.clear
    - unless notice && alert && notice.empty? && alert.empty?
      #flash
        .notice= notice
        .alert= alert
    #content
      = yield
    #footer
      Copyright &copy; 2010 All rights reserved