!!!
%html
  %head
    %title Bboard
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #header
      #logo
        %h1= link_to 'Bboard', root_path
        %h2.byline
          Anonymous community board
          = link_to 'more info..', about_path, :class => 'read_more'
      #navigation
        %ul
          - if !current_user.nil? # logged_in?
            %span.email== logged-in
            == &nbsp;
            %li.settings= link_to 'settings', settings_path
            %li.logout= link_to 'logout', logout_path
          - else
            %li.login= link_to 'login', login_path
            %li.register= link_to 'signup', signup_path
      %br.clear

    #actions
      #sections
        = link_to 'Forum', main_forum_path, :class => 'main'+(request.request_uri =~ /forum/ ? ' current' : '')
        = link_to 'Database', entries_path, :class => 'main'+(request.request_uri =~ /entries/ ? ' current' : '')
      #search
        = render :partial => 'layouts/search_form'
      #links
        = yield :actions

    - if notice && !notice.empty?
      .flash.notice= notice
    - if alert && !alert.empty?
      .flash.alert= alert

    #content
      = yield

    #footer
      Copyright &copy; 2010 All rights reserved