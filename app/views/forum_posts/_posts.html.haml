%ul.posts
  - posts.each do |post|
    %li{:id => "post-#{post.id}"}
      %span.text= format_post_text(post.text)
      .post_meta{:style => "display: none;"}
        = link_to '#', forum_post_path(:thread_id => thread.id, :post_id => post.id), :class => 'action permalink', :title => "Permalink to this specific post"
        / = link_to 'Sticky', sticky_forum_post_path(:thread_id => thread.id, :post_id => post.id), :class => 'action sticky', :title => "Sticky this post to the top. Easier to keep an eye on it"
        = link_to 'Reply', new_forum_post_path(:thread_id => thread.id, :post_id => post.id), :class => 'action reply', :rel => 'facebox', :title => "Reply to this post"
      - child_posts = all_posts && all_posts.select { |fp| fp.parent_id == post.id }
      - if !child_posts.blank?
        = render :partial => 'forum_posts/posts', :object => child_posts, :locals => {:all_posts => posts, :thread => thread}
