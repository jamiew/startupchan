= form_for(@entry, :html => {:multipart => true}) do |f|
  -if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    %p= f.label :icon
    = f.file_field :icon
  .field
    %p= f.label :text, 'Body (some HTML allowed)'
    = f.text_area :text
  .field
    %p= f.label :summary, 'Summary (optional)'
    = f.text_area :summary, :rows => 4


  .actions
    = f.submit 'Save'
